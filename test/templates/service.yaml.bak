apiVersion: v1
kind: Service
metadata:
  name: example-service-lb
spec:
  selector:
    app: website #anything which has a label of {website}
  ports:
    - port: 80
      targetPort: 8080
  type: ClusterIP
  
---
apiVersion: v1
kind: Service
metadata:
  name: example-platform-lb
spec:
  selector:
    app: website #anything which has a label of {website}
  ports:
    - port: 80
      targetPort: 8002
  type: ClusterIP